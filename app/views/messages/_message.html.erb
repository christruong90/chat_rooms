
<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-1">
        <%#= gravatar_for message.user %>
      </div>
      <div class="col-md-11">
        <p class="card-text">
          <span class="text-muted"><%#= message.timestamp %> <br><%= message.user.username.capitalize  %>:</span><br>
          <%= emojify message.body %>
        </p>
      </div>
    </div>
  </div>
</div>
